{% capture date %}{{ "now" | date: "%Y-%m-%d %H:%M" }}{% endcapture %}

<footer class="footer">
  <div class="page-container stack">
    <p class="footer__title">{{ meta.title }}</p>
    <p>Last updated: {% prettyDate date %}</p>

    <div class="footer__links">
      {% for item in navigation %}
        <a class="link" href="{{ item.key }}">{{ item.title }}</a>
      {% endfor %}
    </div>

  </div>
</footer>


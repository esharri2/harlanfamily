<nav class="nav">
    <button
        class="nav__toggle hidden-large"
        aria-controls="menuItems"
        aria-expanded="false"
        aria-label="Expand navigation">
        <span data-nav-open-icon>{{ '/_includes/icons/menu.svg' | svgContents:'w-3 h-3' }}</span>
        <span class="hidden" data-nav-close-icon>{{ '/_includes/icons/cross.svg' | svgContents:'w-3 h-3' }}</span>
    </button>
    {% comment %}Hiding this for now!{% endcomment %}
    <div class="nav__logo hidden">
       {% image "./images/logo.jpg", "Harlan Family of America logo", "300px", "300,600" %}
    </div>
    <ul
        class="reset stack"
        id="menuItems">
        {% for section in data %}
            <p class="nav__section-title">{{section.name}}</p>
            {% for item in section.pages %}
              {% if page.filePathStem == item.key %}
                  {% assign activeClasses = 'active'%}
                  {% assign currentAttribute = 'aria-current="page"' %}
              {% else %}
                  {% assign activeClasses = null %}
                  {% assign currentAttribute = null %}
              {% endif %}
              <li class="{{activeClasses}}" {{currentAttribute}}>
                  <a class="link" href="{{item.key}}">{{item.title}}</a>
              </li>
            {% endfor %}
        {% endfor %}
    </ul>
</nav>

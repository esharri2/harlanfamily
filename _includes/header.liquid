<header class="header {{text-align}}">
  <div class="background-image {% if darken %}darken{% endif %}">
    {% assign file = src | default: 'mountain-range-stock.jpg'%}
    {% assign path = "./images/" | append: file %}
    {% image path, "", "100vw" %}
  </div>
  <div class="header__content">
    <h1>{{ title }}</h1>
  </div>
</header>
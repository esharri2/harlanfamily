name: Eleventy Build
run-name: ${{ github.actor }} is testing build...
on: [push]
jobs:
  test: 
    runs-on: ubuntu-18.04
    steps:
      - run: echo "Build was automatically triggered by a ${{ github.event_name }} event."
  build_deploy:
    runs-on: ubuntu-18.04
    steps:
      - uses: actions/checkout@master
      - name: Build
        uses: TartanLlama/actions-eleventy@master
      - name: Deploy
        uses: peaceiris/actions-gh-pages@v3
        with:
          publish_dir: _site 
          publish_branch: gh-pages
          github_token: ${{ secrets.GITHUB_TOKEN }}

      <h2>{{post.data.title}}</h2>
      <p><span class="italic">{% prettyDate post.data.date %}</span> {%comment%}| <span class="italic">{{post.data.description}}</span>{% endcomment %}</p>
      {{post.templateContent}}
    </article>
  {% endfor %}

